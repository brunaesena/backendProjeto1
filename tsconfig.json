{
  "compilerOptions": {
    "target": "es2016",                                 
    /* Modules */
    "module": "ESNext",                               
    "rootDir": "./src",                        
    "sourceMap": true,                                
    "outDir": "./build",                                   
    "removeComments": true,                          
	  "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    /* Type Checking */
    "strict": true,                                  
    "noImplicitAny": true,                           
    "skipLibCheck": true      
  },
  "include": ["src/**/*.ts", "src/server.ts"],            /* Lista de arquivos a serem incluídos na compilação */
  "exclude": ["node_modules"]            /* Lista de diretórios a serem excluídos da compilação */
}
